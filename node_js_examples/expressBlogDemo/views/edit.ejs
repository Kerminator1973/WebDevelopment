<% include partials/header.ejs %>

<div class="container">
	<h1>Изменить сообщение</h1>
	<form action="/posts/<%= post._id %>?_method=PUT" method="POST" >
		<div class="form-group">
			<label for="postTitle">Заголовок</label>
			<input id="postTitle" class="form-control" type="text" name="title" 
				placeholder="Заголовок" value="<%= post.title %>">
		</div>

		<div class="form-group">
			<label for="postImage">Изображение</label>
			<input id="postImage" class="form-control" type="text" name="image" 
				placeholder="Изображение" value="<%= post.image %>">
		</div>

		<div class="input-group mb-3">
		  <div class="input-group-prepend">
		    <span class="input-group-text">Сообщение</span>
		  </div>
		  <textarea class="form-control" name="content" aria-label="Сообщение">
		  	<%= post.content %>
		  </textarea>
		</div>	

		<button class="btn btn-primary">Изменить</button>
	</form>

	<br />

	<form action="/posts/<%= post._id %>?_method=DELETE" method="POST" >
		<button class="btn btn-danger">Удалить</button>
	</form>
</div>	

<% include partials/footer.ejs %>